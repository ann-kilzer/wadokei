# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# 4 space indentation
[*.{ts,tsx,js,cjs}]
charset = utf-8

[*.css]
charset = utf-8

[*.yml]
indent_size = 2
